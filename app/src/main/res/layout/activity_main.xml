<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <ImageView
            android:id="@+id/iv_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/search_product"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/ic_search"
            app:layout_constraintRight_toRightOf="@id/iv_search"
            app:layout_constraintTop_toTopOf="@id/iv_search" />
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_camera"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/iv_search"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="10dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="400dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_camera"
                    android:layout_width="400dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/camera"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>
                <TextView
                    android:id="@+id/tv_camera"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Camera"
                    android:textSize="18sp"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="10dp"
                    app:layout_constraintLeft_toLeftOf="@id/iv_camera"
                    app:layout_constraintBottom_toTopOf="@id/tv_camera_brand"/>
                <TextView
                    android:id="@+id/tv_camera_brand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Product Form Leica Brand"
                    android:textColor="#fff"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    app:layout_constraintLeft_toLeftOf="@id/iv_camera"
                    app:layout_constraintBottom_toBottomOf="@id/iv_camera"
                    android:layout_marginBottom="10dp"/>
                <ImageView
                    android:id="@+id/iv_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_more"
                    app:layout_constraintBottom_toBottomOf="@id/iv_camera"
                    app:layout_constraintRight_toRightOf="@id/iv_camera"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="5dp"

                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/ads"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/cv_camera"
            android:layout_marginTop="10dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_ads"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/search_product"
                    app:layout_constraintTop_toTopOf="parent"/>
                <TextView
                    android:id="@+id/tv_adsbrwoseBy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BROWSE BY"
                   style="@style/ads_white"
                    app:layout_constraintLeft_toLeftOf="@id/iv_ads"
                    app:layout_constraintRight_toRightOf="@id/iv_ads"
                    app:layout_constraintBottom_toTopOf="@id/cv_adsbrand"
                    app:layout_constraintHorizontal_bias="0.7"/>
                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_adsbrand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="@id/tv_adsbrwoseBy"
                    app:layout_constraintBottom_toBottomOf="@id/iv_ads"
                    android:layout_marginBottom="40dp"
                    android:layout_marginTop="8dp"
                    app:cardCornerRadius="8dp">
<!--                    <TextView-->
<!--                        android:id="@+id/tv_adsbrand"-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:text="BRAND"-->
<!--                        android:textSize="18sp"-->
<!--                        android:textStyle="bold"-->
<!--                        android:background="@drawable/btviewall"-->
<!--                        android:textColor="#fff"-->
<!--                        />-->
                    <Button
                        style="@style/btnAds"
                        android:layout_width="78dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ads"
                        android:text="brand" />
                </androidx.cardview.widget.CardView>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_BrowseBy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/ads">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#DADDDD">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Latest Arrivals"
                    android:textStyle="bold"
                    android:textSize="19sp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_marginLeft="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"/>
                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_btnViewAll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:cardCornerRadius="10dp">
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="view all"
                        android:textSize="10dp"
                        android:textColor="#fff"
                        android:background="@drawable/btviewall"
                        />
                </androidx.cardview.widget.CardView>
                <fragment
                    android:id="@+id/lastestFragmentContainer"
                    android:name="com.example.multiplerecycler.LatestArrivalFragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/cv_btnViewAll"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/cv_BrowseBy">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/img_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/search_product"
                    app:layout_constraintTop_toTopOf="parent"
                    />
                <TextView
                    android:id="@+id/tv_cannot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CAN'T"
                    style="@style/ads_white"
                    app:layout_constraintLeft_toLeftOf="@id/img_content"
                    app:layout_constraintRight_toRightOf="@id/img_content"
                    app:layout_constraintTop_toTopOf="@id/img_content"
                    app:layout_constraintBottom_toBottomOf="@id/img_content"
                    app:layout_constraintVertical_bias="0.3"
                    app:layout_constraintHorizontal_bias="0.45"/>
                <TextView
                    android:id="@+id/tv_find"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" FIND"
                    style="@style/ads_black"
                    app:layout_constraintTop_toTopOf="@id/tv_cannot"
                    app:layout_constraintBaseline_toBaselineOf="@id/tv_cannot"
                    app:layout_constraintLeft_toRightOf="@id/tv_cannot"/>
                <TextView
                    android:id="@+id/tv_what_you"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" WHAT YOU"
                    style="@style/ads_white"
                    app:layout_constraintTop_toTopOf="@id/tv_cannot"
                    app:layout_constraintBaseline_toBaselineOf="@id/tv_cannot"
                    app:layout_constraintLeft_toRightOf="@id/tv_find"
                    />
                <TextView
                    android:id="@+id/tv_looking_for"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LOOKING FOR?"
                    style="@style/ads_black"
                    app:layout_constraintLeft_toLeftOf="@id/tv_cannot"
                    app:layout_constraintTop_toBottomOf="@id/tv_cannot"/>
                <TextView
                    android:id="@+id/tv_searchBy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SEARCH BY"
                    style="@style/ads_black"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

<!--        <fragment-->
<!--            android:id="@+id/countryFragmentContainer"-->
<!--            android:name="com.example.multiplerecycler.CountryFragment"-->
